# databricks.yml
# This is the configuration for the Databricks Asset Bundle {{.project_name}}.

bundle:
  name: {{.project_name}}

include:
  - resources/*.yml

variables:
  warehouse_id:
    type: string

targets:
  dev:
    mode: development
    default: true
    workspace:
      host: {{workspace_host}}

  prod:
    mode: production
    workspace:
      host: https://path/to/prod/workspace #TODO: Change this!! 
      root_path: /Workspace/Users/${user}/.bundle/${bundle.name}