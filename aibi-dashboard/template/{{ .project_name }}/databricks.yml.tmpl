# databricks.yml
# This is the configuration for the Databricks Asset Bundle {{.project_name}}.

bundle:
  name: {{.project_name}}

include:
  - resources/*.yml

targets:
  dev:
    mode: development
    default: true
    workspace:
      host: {{workspace_host}}

  prod:
    mode: production
    workspace:
      host: https://path/toprod/worspace #TODO: Change this!! 
      root_path: /Workspace/Users/{{user_name}}/.bundle/${bundle.name}